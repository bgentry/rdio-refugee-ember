<div class='rdio-album'>
  <header>
    <h3>Rdio Album</h3>
  </header>
  <div class='album-art' style={{backgroundImage model.rdioAlbum.icon}}></div>
  <p class='album-name'>
    <a href='{{model.rdioAlbum.shortUrl}}' title='View on Rdio'>
      {{model.rdioAlbum.name}}
      {{#if model.rdioAlbum.isExplicit}}
        <span class='explicit-icon'></span>
      {{/if}}
    </a>
  </p>
  <p class='artist-name'>{{model.rdioAlbum.artistName}}</p>

  <div class='metadata'>
    {{moment-format model.rdioAlbum.releaseDate 'YYYY'}}
    ·
    {{pluralize-word 0 'songs'}},
    {{moment-duration model.rdioAlbum.duration 's'}}
  </div>

  <ul class='track-list'>
    {{#each model.rdioAlbum.tracks as |track|}}
      <li class='track-list-item'>
        {{track.trackNum}}: {{track.name}}
        {{#if track.isExplicit}}
          <span class='explicit-icon'></span>
        {{/if}}
      </li>
    {{/each}}
  </ul>
</div>

<header>
  <h3>Spotify Matches</h3>
</header>

<div class='spotify-album-list'>
  {{#each model.matches as |spotifyAlbum|}}
    <div class='spotify-album'>
      <div class='select-album'>
        <p>Select this match ✓</p>
      </div>
      <div class='album-art' style={{backgroundImage spotifyAlbum.image}}></div>
      <p class='album-name' title={{spotifyAlbum.name}}>
        <a href='{{spotifyAlbum.url}}' title='View on Spotify'>
          {{#if spotifyAlbum.explicit}}
            <span class='explicit-icon'></span>
          {{/if}}
          {{spotifyAlbum.name}}
        </a>
      </p>
      <p class='artist-name' title={{spotifyAlbum.artistName}}>{{spotifyAlbum.artistName}}</p>
      <div class='metadata'>
        {{moment-format spotifyAlbum.releaseDate 'YYYY'}}
        ·
        {{pluralize-word spotifyAlbum.trackCount 'songs'}},
        {{moment-duration spotifyAlbum.duration 's'}}
      </div>

      <ul class='track-list'>
        {{#each spotifyAlbum.tracks as |track|}}
          <li class='track-list-item'>
            {{#if track.explicit}}
              <span class='explicit-icon'></span>
            {{/if}}
            <span class='track-number'>{{track.trackNum}}</span>
            {{track.name}}
          </li>
        {{/each}}
      </ul>
    </div>
  {{/each}}
</div>
