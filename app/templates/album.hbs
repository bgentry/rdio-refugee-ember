<div class='rdio-album'>
  <header>
    <h3>Rdio Album</h3>
  </header>
  <div class='album-art' style={{backgroundImage model.rdioAlbum.icon}}></div>
  <p class='album-name'>
    <a href='{{model.rdioAlbum.shortUrl}}' title='View on Rdio'>
      {{model.rdioAlbum.name}}
      {{#if model.rdioAlbum.isExplicit}}
        <span class='explicit-icon'></span>
      {{/if}}
    </a>
  </p>
  <p class='artist-name'>{{model.rdioAlbum.artistName}}</p>

  <div class='metadata'>
    {{moment-format model.rdioAlbum.releaseDate 'YYYY'}}
    Â·
    {{pluralize-word model.rdioTrackCount 'songs'}},
    {{duration model.rdioAlbum.duration}}
  </div>

  <ul class='track-list'>
    {{#each model.rdioAlbum.tracks as |track|}}
      <li class='track-list-item'>
        {{#if track.isExplicit}}
          <span class='explicit-icon'></span>
        {{/if}}
        <span class='track-number'>{{track.trackNum}}</span>
        {{track.name}}
      </li>
    {{/each}}
  </ul>
</div>

<header>
  <h3>Spotify Matches</h3>
</header>

<div class='spotify-album-list'>
  {{#each model.matches as |match|}}
    {{album-match collectionAlbum=model match=match}}
  {{/each}}
</div>
