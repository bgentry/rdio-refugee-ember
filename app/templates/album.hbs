<img class='album-art' src='{{model.rdioAlbum.icon}}'/>

<dl>
  <dd>Artist</dd>
  <dt>{{model.rdioAlbum.artistName}}</dt>
  <dd>Tracks</dd>
  <dt>{{model.rdioAlbum.length}}</dt>
  <dd>Duration</dd>
  <dt>{{model.rdioAlbum.duration}}</dt>
  <dd>Explicit?</dd>
  <dt>{{model.rdioAlbum.isExplicit}}</dt>
  <dd>Clean?</dd>
  <dt>{{model.rdioAlbum.isClean}}</dt>
  <dd>URL</dd>
  <dt><a href='{{model.rdioAlbum.shortUrl}}'>{{model.rdioAlbum.shortUrl}}</a></dt>
</dl>

<h3>Track list:</h3>
<ul>
  {{#each model.rdioAlbum.tracks as |track|}}
    <li>
      {{track.trackNum}}: {{track.name}}
      {{#if track.isExplicit}}(Explicit){{/if}}
    </li>
  {{/each}}
</ul>
